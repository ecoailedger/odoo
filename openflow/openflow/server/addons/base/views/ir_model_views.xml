<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ir.model Views -->
        <record id="view_model_tree" model="ir.ui.view">
            <field name="name">ir.model.tree</field>
            <field name="model">ir.model</field>
            <field name="arch" type="xml">
                <tree string="Models">
                    <field name="name"/>
                    <field name="model"/>
                    <field name="state"/>
                    <field name="transient"/>
                </tree>
            </field>
        </record>

        <record id="view_model_form" model="ir.ui.view">
            <field name="name">ir.model.form</field>
            <field name="model">ir.model</field>
            <field name="arch" type="xml">
                <form string="Model">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="model"/>
                            <field name="state"/>
                            <field name="transient"/>
                            <field name="modules"/>
                        </group>
                        <notebook>
                            <page string="Fields">
                                <field name="field_ids"/>
                            </page>
                            <page string="Access Rights">
                                <field name="access_ids"/>
                            </page>
                            <page string="Information">
                                <field name="info"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ir.model.fields Views -->
        <record id="view_model_fields_tree" model="ir.ui.view">
            <field name="name">ir.model.fields.tree</field>
            <field name="model">ir.model.fields</field>
            <field name="arch" type="xml">
                <tree string="Fields">
                    <field name="name"/>
                    <field name="field_description"/>
                    <field name="model"/>
                    <field name="ttype"/>
                    <field name="required"/>
                    <field name="readonly"/>
                </tree>
            </field>
        </record>

        <!-- ir.model.access Views -->
        <record id="view_model_access_tree" model="ir.ui.view">
            <field name="name">ir.model.access.tree</field>
            <field name="model">ir.model.access</field>
            <field name="arch" type="xml">
                <tree string="Access Rights">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="group_id"/>
                    <field name="perm_read"/>
                    <field name="perm_write"/>
                    <field name="perm_create"/>
                    <field name="perm_unlink"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
