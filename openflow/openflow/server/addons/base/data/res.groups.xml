<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Base Groups -->
        <record id="group_user" model="res.groups">
            <field name="name">Internal User</field>
            <field name="comment">Users with access to the system</field>
        </record>

        <record id="group_system" model="res.groups">
            <field name="name">Settings</field>
            <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
            <field name="comment">Users with access to system settings</field>
        </record>

        <record id="group_no_one" model="res.groups">
            <field name="name">Technical Features</field>
            <field name="comment">Group for technical/debug features</field>
        </record>

        <record id="group_multi_company" model="res.groups">
            <field name="name">Multi Companies</field>
            <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
            <field name="comment">Users with access to multiple companies</field>
        </record>

        <record id="group_portal" model="res.groups">
            <field name="name">Portal</field>
            <field name="share" eval="True"/>
            <field name="comment">External portal users with limited access</field>
        </record>

        <record id="group_public" model="res.groups">
            <field name="name">Public</field>
            <field name="share" eval="True"/>
            <field name="comment">Public website visitors (unauthenticated)</field>
        </record>

    </data>
</odoo>
